# TheraCare EHR Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-backend-domain.up.railway.app,healthcheck.railway.app

# CSRF Trusted Origins
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-backend-domain.up.railway.app,https://your-frontend-domain.up.railway.app

# Database Configuration - Railway PostgreSQL
DATABASE_URL=postgresql://user:password@host:port/database

# PostgreSQL Database Configuration (parsed from DATABASE_URL)
DB_CONNECTION=postgresql
DB_HOST=your-db-host.railway.app
DB_PORT=5432
DB_DATABASE=railway
DB_USERNAME=postgres
DB_PASSWORD=your-database-password

# Security Settings
ENCRYPTION_KEY=generate-a-secure-32-byte-key-for-production

# CORS Settings (Frontend origins only - NOT the backend URL)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.up.railway.app

# Email Settings - Mailgun SMTP Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.mailgun.org
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_USE_TLS=False
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-mailgun-smtp-password
DEFAULT_FROM_EMAIL=your-email@yourdomain.com

# Mailgun API Settings
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=yourdomain.com
MAILGUN_API_URL=https://api.mailgun.net/v3

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.up.railway.app
